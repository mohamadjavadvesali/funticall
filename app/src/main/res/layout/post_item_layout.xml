<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.fntl.app.model.PostModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/spacing_medium"

            android:layout_marginBottom="@dimen/spacing_medium"
            android:visibility="visible"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_marginLeft="10dp"
                            app:cardCornerRadius="23dp">

                            <ImageView
                                android:id="@+id/imageView"
                                setAvatar="@{model.avatar }"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_marginLeft="10dp" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dana_fanum_bold"
                                android:text="@{model.fullName}"
                                android:textFontWeight="@integer/config_navAnimTime"
                                android:textSize="16dp" />

                            <TextView
                                setDate='@{model.createdDate , default= "00:00"}'
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/dana_fanum_light"
                                android:textFontWeight="@integer/config_navAnimTime"
                                android:textSize="14dp" />

                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/dana_fanum_regular"
                        android:text="@{model.content }"
                        android:textSize="16dp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        setImage="@{model.images[0].fileId}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content_area"
                        android:layout_marginHorizontal="10dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/number_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`لایک`+Integer.toString(model.likesCount) }"
                            android:textColor="@color/grey_60" />


                        <View
                            android:layout_width="60dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/number_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`کامنت`+ Integer.toString(model.commentCount)}"
                            android:textColor="@color/grey_60" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/post_like_linear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|center_vertical"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/post_like"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:srcCompat="@drawable/ic_favorite_border" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dana_fanum_medium"
                                android:text="لایک"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/comment_linear"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="false"
                                app:srcCompat="@drawable/ic_comment"
                                app:tint="@color/grey_60" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dana_fanum_medium"
                                android:text="کامنت"

                                android:textColor="@color/grey_60" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/post_share_linear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="false"
                                app:srcCompat="@drawable/ic_share"
                                app:tint="@color/grey_60" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/dana_fanum_medium"

                                android:text="اشتراک گذاری"
                                android:textColor="@color/grey_60" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>